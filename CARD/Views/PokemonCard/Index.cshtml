@model IEnumerable<CARD.Models.PokemonCard>
@{
    ViewData["Title"] = "Carte Pokémon";
}

<h2 class="mb-4">Carte Pokémon</h2>

<a asp-action="Create" class="btn btn-warning mb-3">Aggiungi Nuova Carta</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Valore</th>
            <th>Numero di Serie</th>
            <th>Espansione</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Valore €</td>
                <td>@item.NumeroSerie</td>
                <td>@item.Espansione</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Modifica</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Dettagli</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
