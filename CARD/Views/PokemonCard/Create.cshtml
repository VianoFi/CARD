@model CARD.Models.PokemonCard
@{
    ViewData["Title"] = "Aggiungi Carta Pokémon";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Valore"></label>
        <input asp-for="Valore" class="form-control" />
        <span asp-validation-for="Valore" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumeroSerie"></label>
        <input asp-for="NumeroSerie" class="form-control" />
        <span asp-validation-for="NumeroSerie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Espansione"></label>
        <input asp-for="Espansione" class="form-control" />
        <span asp-validation-for="Espansione" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Salva</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
