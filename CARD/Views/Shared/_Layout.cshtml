<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CARD</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/CARD.styles.css" rel="stylesheet" asp-append-version="true" />

    <style>
        /* Navbar */
        .navbar {
            background: linear-gradient(90deg, #1e2a38, #0a1929);
            box-shadow: 0 4px 10px rgb(0 0 0 / 0.3);
            font-weight: 600;
            letter-spacing: 0.05em;
        }
        .navbar-brand {
            font-family: 'Segoe UI Black', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 1.9rem;
            color: #00c8f8 !important;
            text-shadow: 0 0 6px #00c8f8aa;
            transition: color 0.3s ease;
        }
        .navbar-brand:hover {
            color: #33d7ff !important;
            text-shadow: 0 0 10px #33d7ffcc;
        }
        .nav-link {
            color: #cbd5e1 !important;
            transition: color 0.25s ease;
        }
        .nav-link:hover, .nav-link.active {
            color: #00c8f8 !important;
            text-shadow: 0 0 6px #00c8f8aa;
        }

        /* Hamburger menu */
        .navbar-toggler {
            border: 2px solid #00c8f8;
            transition: background-color 0.3s ease;
        }
        .navbar-toggler:hover {
            background-color: #00c8f8;
        }
        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='%2300c8f8' stroke-width='3' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        /* Body padding to avoid overlap with fixed navbar */
        body {
            padding-top: 70px;
            background: #f0f4f8;
            color: #2c3e50;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Main container */
        main {
            min-height: 75vh;
        }

        /* Footer */
        footer {
            background: #1e2a38;
            color: #94a3b8;
            text-align: center;
            padding: 1rem 0;
            font-size: 0.9rem;
            letter-spacing: 0.05em;
            user-select: none;
            box-shadow: inset 0 1px 0 rgba(255,255,255,0.05);
        }

        /* Button home custom */
        .btn-home {
            background-color: #00c8f8;
            border: none;
            border-radius: 30px;
            padding: 6px 22px;
            color: white !important;
            font-weight: 600;
            box-shadow: 0 0 8px #00c8f8aa;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            letter-spacing: 0.04em;
        }
        .btn-home:hover, .btn-home:focus {
            background-color: #33d7ff;
            box-shadow: 0 0 14px #33d7ffcc;
            color: #0a1929 !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    CARD
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu"
                        aria-controls="navMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="btn btn-home nav-link px-4" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2025 CARD — Tutti i diritti riservati
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
