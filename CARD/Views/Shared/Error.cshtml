@model ErrorViewModel
@{
    ViewData["Title"] = "Errore";
}

<div class="container py-5 text-center">
    <h1 class="display-3 text-danger mb-3">
        <i class="bi bi-exclamation-triangle-fill"></i> Errore
    </h1>

    <h4 class="text-secondary mb-4">Si è verificato un errore durante l'elaborazione della richiesta.</h4>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong>
            <code class="bg-light p-2 rounded">@Model.RequestId</code>
        </p>
    }

    <hr class="my-4" />

    <div class="alert alert-warning mx-auto" style="max-width: 600px;">
        <h5>Modalità di sviluppo</h5>
        <p>
            Passando alla modalità <strong>Sviluppo</strong> verranno mostrati maggiori dettagli sull'errore.
        </p>
        <p>
            <strong>Attenzione:</strong> non abilitare la modalità sviluppo in applicazioni in produzione,
            perché potrebbero essere esposti dati sensibili.
        </p>
        <p>
            Per abilitare la modalità sviluppo in locale, imposta la variabile ambiente
            <code>ASPNETCORE_ENVIRONMENT</code> a <code>Development</code> e riavvia l'app.
        </p>
    </div>

    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-home mt-4">
        Torna alla Home
    </a>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}
