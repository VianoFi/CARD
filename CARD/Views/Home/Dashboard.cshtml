@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Dashboard della Collezione</h2>

    <div class="row justify-content-center text-center">
        <div class="col-md-3">
            <div class="card border-warning shadow">
                <div class="card-body">
                    <h5 class="card-title text-warning">Carte Pokémon</h5>
                    <p class="card-text fs-4">@ViewBag.TotalPokemon €</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger shadow">
                <div class="card-body">
                    <h5 class="card-title text-danger">Carte Yu-Gi-Oh!</h5>
                    <p class="card-text fs-4">@ViewBag.TotalYuGiOh €</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success shadow">
                <div class="card-body">
                    <h5 class="card-title text-success">Carte Magic</h5>
                    <p class="card-text fs-4">@ViewBag.TotalMagic €</p>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <div class="text-center">
        <h4>Valore Totale Collezione</h4>
        <p class="fs-2 fw-bold text-primary">@ViewBag.TotalGenerale €</p>
    </div>
</div>
