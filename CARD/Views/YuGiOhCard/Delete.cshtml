@model CARD.Models.YuGiOhCard

@{
    ViewData["Title"] = "Elimina Carta YuGiOh";
}

<h1>@ViewData["Title"]</h1>

<h3>Sei sicuro di voler eliminare questa carta?</h3>

<div>
    <h4>@Model.Nome</h4>
    <dl class="row">
        <dt class="col-sm-2">Espansione</dt>
        <dd class="col-sm-10">@Model.Espansione</dd>

        <dt class="col-sm-2">Numero Serie</dt>
        <dd class="col-sm-10">@Model.NumeroSerie</dd>

        <dt class="col-sm-2">Valore</dt>
        <dd class="col-sm-10">@Model.Valore €</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">

     @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Elimina</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
